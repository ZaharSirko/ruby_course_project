<h1>Користувачі</h1>

<table>
  <thead>
    <tr>
      <th>Ім'я</th>
      <th>Email</th>
      <th>Роль</th>
      <th>Дія</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name || "Невідомо" %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= form_with url: update_role_admin_path(user), method: :patch, local: true do |f| %>
            <%= select_tag :role, options_for_select(User::ROLES, user.role), name: "role" %>
            <%= f.submit "Змінити роль" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
