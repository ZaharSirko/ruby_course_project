<!-- app/views/admins/users/edit.html.erb -->

<h1>Edit User Role</h1>

<%= form_with model: @user, url: admins_user_path(@user), method: :patch do |f| %>
  <div class="form-group">
    <%= f.label :role %>
    <%= f.select :role, options_for_select(User::ROLES, @user.role), class: 'form-control' %>
  </div>

  <%= f.submit "Оновити роль", class: 'btn btn-primary' %>
<% end %>
