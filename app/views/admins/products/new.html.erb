<h1>Додати новий продукт</h1>

<%= form_with model: [:admins, @product], local: true do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name ,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, step: "0.01" ,class: "form-control"%>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description,class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :stock %>
    <%= form.number_field :stock, step: "1" ,class: "form-control", min:0 %>
  </div>
 

  <div class="field">
    <%= form.label :image_url %>
    <%= form.file_field :image_url,class: "form-control" %>
  </div>

  <div class="actions">
    <%= form.submit "Додати продукт", class: "btn btn-primary"%>
  </div>
<% end %>
